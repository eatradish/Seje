.header {
  display: flex;
  margin: 0 auto;
  padding: 1em;
  justify-content: space-between;
  

  .blog-title .logo {
    font-family: "Source Serif Pro", sans-serif;
    color: #000;
    font-size: 1.5em;
    text-decoration: none;
    vertical-align: text-top;
  }

  @media screen and (max-width: 320px) { .blog-title .logo { justify-content: center } }

  .menu {
    font-family: "Helvetica Neue","Helvetica","Arial",sans-serif;
    margin: 0 auto;
    vertical-align: text-top;
    
    .menu-item {
      display: inline-block;
      padding: 0.25em;
    }

    .menu-item-link {
      color: #bababa;
      text-decoration: none;
      font-size: 1em;
      &:hover {
        color: gray;
      }
    }
  }
}