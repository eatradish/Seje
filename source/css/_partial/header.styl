.header {
  display: flex;
  margin: 0 auto;
  padding: 1em;
  justify-content: space-between;
  align-items: center;
  

  .blog-title .logo {
    font-family: 'Noto Serif', 'Noto Serif SC', serif;
    color: #000;
    font-size: 1.2em;
    text-decoration: none;
    font-style: italic;
  }

  .blog-title {
    height: 26.5;
  }

  .menu {
    font-family: "Noto Serif", "Noto Serif SC"
    margin: 0 auto;
    vertical-align: text-top;
    
    .menu-item {
      display: inline-block;
      padding: 0.25em;
    }

    .menu-item-link {
      color: #bababa;
      text-decoration: none;
      font-size: 1em;
      &:hover {
        color: gray;
      }
    }
  }

  @media screen and (max-width: 667px) {
    .menu {
      padding-left: 0;
    }
  }
}

@media screen and (max-width: 667px) {
  .header {
    display: flex;
    flex-direction: column;
  }
}


